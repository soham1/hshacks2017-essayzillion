<html>
    <% include ../partials/head %>
    <body>
        <% include ../partials/nav-s %>
        <br></br>
        <h4 class="center">Add Essay</h4>
        <br></br>
        <div class="row container">
            <form class="col s12" method="POST" action="/addEssay">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="essayText" name="essayText" class="materialize-textarea"></textarea>
                  <label for="essayText">Essay</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <input id="year" name="year" type="text" value="2014" class="validate">
                  <label for="year">Year</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <input id="title" name="title" type="text" value="Single Parent Struggle" class="validate">
                  <label for="title">Title</label>
                </div>
              </div>
              <div class="row center">
                <div class="input-field col s12">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                  </button>                  
                </div>
              </div>
            </form>  
        </div>
        <% include ../partials/footer %>
    </body>
</html>