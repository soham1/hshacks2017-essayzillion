<html>
    <% include ../partials/head %>
    <body>
        <% include ../partials/nav %>
        <br></br>
        <h4 class="center">Register as a College</h4>
        <br></br>
        <div class="row container">
            <form class="col s12" method="POST" action="/register-c">
              <div class="row">
                <div class="input-field col s12">
                  <input id="name" name="name" type="text" value="University of California" class="validate">
                  <label for="name">College Name</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="username" name="username" type="text" value="uoc" class="validate">
                  <label for="username">Username</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="password" type="password" name="password" value="password" class="validate">
                  <label for="password">Password</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="officerEmail" type="email" name="officerEmail" value="admin@gmail.com" class="validate">
                  <label for="officerEmail" data-error="Enter a valid email!" data-success="Success!">Admission Officer's Email</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 center">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Register
                    <i class="material-icons right">send</i>
                  </button>                  
                </div>
              </div>
            </form>  
        </div>
        <% include ../partials/footer %>
    </body>
</html>